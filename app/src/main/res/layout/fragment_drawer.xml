<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:gravity="top">

    <!-- ðŸ”¹ Header med ikon, titel og sortering -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:baselineAligned="false">

        <!-- Venstre: ikon og titel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fryserIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/fryser_foreground"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min fryser"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- HÃ¸jre: sorteringsknapper -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <!-- ðŸ”½ Pil til sorteringsretning -->
            <ImageButton
                android:id="@+id/btnSortDirection"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_downward"
                android:contentDescription="Skift sorteringsretning"
                app:tint="@android:color/black" />

            <!-- ðŸ”½ Dropdown menu -->
            <Spinner
                android:id="@+id/spinnerSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:spinnerMode="dropdown"
                android:entries="@array/sort_options" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ”¹ Liste over varer -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- ðŸ”¹ Tekst, nÃ¥r der ingen varer er -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingen varer"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
